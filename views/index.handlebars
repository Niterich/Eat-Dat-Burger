<div class="header">
  <h1>Eat Dat Burger</h1>
  <img class="logo" src="./assets/images/burger-pic.png" alt="eets a burger lol">
</div>

<div class="burger-hoard">
<h2>Burger Hoard</h2>

  <ul>
    {{#each burgers}}
      {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
      {{/unless}}
    {{/each}}
  </ul>
</div>
  
<div class="eaten-burgers">
  <h2>Devoured Burgers</h2>

  <ul>
    {{#each burgers}}
      {{#if devoured}}
        {{> burgers/burger-block devoured=false}}
      {{/if}}
    {{/each}}
  </ul>
</div>

<div class="add-burger">
  <h2>Add a Burger</h2>
  <form class="create-form">

    <div class="form-group padded">
      <label for="ba">Burger Name:</label>
      <input type="text" id="ba" name="name">
    </div>

    <button type="submit" id="add-burger">I would like to eat this.</button>
  </form>
</div>